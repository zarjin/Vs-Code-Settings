{
  // Editor Productivity
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.lineHeight": 1.75,
  "editor.fontLigatures": true,
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.linkedEditing": true,
  "editor.parameterHints.enabled": true,

  // Intellisense Boost
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.completeFunctionCalls": true,

  // Linting & Formatting
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "eslint.enable": true,
  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "css"
  ],

  // Terminal UX
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.scrollback": 10000,

  // File & Search Optimization
  "files.exclude": {
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.env": true
  },

  // Git Streamline
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "scm.diffDecorations": "all",
  "git.openDiffOnClick": true,
  "workbench.activityBar.location": "top",
  "window.zoomLevel": 1.75,
  "window.title": "",
  "breadcrumbs.enabled": false,
  "explorer.autoReveal": true,
  "workbench.panel.showLabels": false,
  "window.menuBarVisibility": "toggle",
  "chat.commandCenter.enabled": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.splitInGroupLayout": "vertical",

  // Error Lens Settings
  "errorLens.enabled": true,
  "errorLens.fontWeight": "bold",
  "errorLens.fontSize": "14px",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.onSave": true,
  "errorLens.followCursor": "closestProblem",
  "errorLens.messageTemplate": "$message",
  "diffEditor.codeLens": true,

  // Augments Settings
  "augment.nextEdit.enableBackgroundSuggestions": false,
  "augment.nextEdit.enableAutoApply": false,
  "workbench.colorTheme": "After Dark No Italics"
}
